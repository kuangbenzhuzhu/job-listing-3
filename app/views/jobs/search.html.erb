
  <%= render :partial => "jobs/search_bar"%>

  <div class="col-md-12">
    <% if @jobs.blank?%>
      <br>
      <h3 class="text-center">
        没有相匹配的职位，请尝试另一个关键词。
      </h3>
    <% else %>
      <h3 class="text-center" style="margin-top: 30px;"> 共找到 <%= @jobs.count %> 职位 </h3>
      <hr/>
        <table class="table table-borderd">
          <% @jobs.each do |job| %>
            <%= link_to(render_highlight_content(job,@query_string), job_path(job))%>
            <hr/>
          <% end %>
        </table>
        <div class="text-center">
          <%= will_paginate @jobs, render: BootstrapPagination::Rails%>
        </div>

    <% end %>

  </div>
