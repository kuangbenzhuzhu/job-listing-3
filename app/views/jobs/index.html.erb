<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    排序
       <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound"))%>
    </li>
    <li>
      <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound"))%>
    </li>
    <li>
      <%= link_to("按照发表时间排序", jobs_path)%>
    </li>
  </ul>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>#</td>
      <td>职位招募</td>
      <td colspan="2" >薪资范围</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each_with_index do |job,index| %>
    <tr>
      <td><%= index +1%></td>
      <td>
        <%= link_to(job.title, job_path(job))%>
      </td>
      <td colspan="2">
          <span class="fa fa-rmb"></span><%= job.wage_lower_bound %> - <%= job.wage_upper_bound %>元
      </td>
      <td>
        <%= local_time_ago(job.created_at) %>
      </td>
    <% end %>
  </tbody>

</table>


<div class="text-center">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
