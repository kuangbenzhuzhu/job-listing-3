<div class="row">
  <div class="center-block">
  <div class="col-sm-4 col-lg-3 " style="padding-top: 10px">
    <%= form_tag search_jobs_path, :method => :get, :class => "jobs-search-form" do %>
      <div class="input-group">
        <input type="text" class="form-control" name="q" value="<%= params[:q]%>" placeholder="职位...">

        <span class="input-group-btn">
          <button type="submit" class="btn btn-danger btn-info">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div>
    <% end %>
  </div>
  </div>
</div>
